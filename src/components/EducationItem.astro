---
interface Props {
	title: string;
	period: string;
	details?: string;
}

const { title, period, details } = Astro.props;
---

<div class="py-4 first:pt-0">
	<div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-2 mb-1">
		<h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-100">
			{title}
		</h3>
		<span class="text-sm text-zinc-500 dark:text-zinc-500">{period}</span>
	</div>
	{details && (
		<p class="text-zinc-600 dark:text-zinc-400 mt-1">{details}</p>
	)}
</div>


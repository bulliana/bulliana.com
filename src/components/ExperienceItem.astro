---
interface Props {
	title: string;
	period: string;
	href?: string;
	points: string[];
}

const { title, period, href, points } = Astro.props;
---

<div class="py-4 first:pt-0">
	{href ? (
		<a
			href={href}
			class="group block"
			rel={href.startsWith('http') ? 'noopener noreferrer' : undefined}
			target={href.startsWith('http') ? '_blank' : undefined}
		>
			<div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-2 mb-2">
				<h3 class="text-lg font-semibold text-zinc-900 group-hover:text-zinc-600 dark:text-zinc-100 dark:group-hover:text-zinc-400 transition-colors">
					{title}
				</h3>
				<span class="text-sm text-zinc-500 dark:text-zinc-500">{period}</span>
			</div>
		</a>
	) : (
		<div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-2 mb-2">
			<h3 class="text-lg font-semibold text-zinc-900 dark:text-zinc-100">
				{title}
			</h3>
			<span class="text-sm text-zinc-500 dark:text-zinc-500">{period}</span>
		</div>
	)}
	<ul class="space-y-1 ml-0 list-none">
		{points.map((point) => (
			<li class="text-zinc-600 dark:text-zinc-400 flex items-start">
				<span class="mr-2 text-zinc-400 dark:text-zinc-600">âš¬</span>
				<span>{point}</span>
			</li>
		))}
	</ul>
</div>

